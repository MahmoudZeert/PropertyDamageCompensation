@model MyErrorViewModel

<style>
    h1 {
        font-size: 3em;
        font-weight: bold;
        color: #FF0000;
        text-align: center;
    }

    .error {
        margin: 20px auto;
        max-width: 600px;
        background-color: #F8F8F8;
        border: 1px solid #E0E0E0;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
    }

    h2 {
        font-size: 2.5em;
        font-weight: bold;
        color: #FF0000;
        margin-top: 20px;
         text-align: center;
    }

    p {
        font-size: 1.2em;
        color: #555;
    }
</style>

<div class="error">
    <div class="mb-3">
        <h2>@Model.StatusCode - @Model.Title</h2>
    </div>

        <div class="mt-3">
@*            <div class="text-center">
                <h4>Status Code   : @Model.StatusCode</h4>
            </div>*@
            <div class="text-center">
                <h4> @Model.ErrorMessage</h4>
            </div>                
        </div>
        <div class="mt-3 row justify-content-center ">
            <div class="col-3">
                 <a class="btn btn-dark" asp-action="Index" asp-controller="Home" asp-area="">Close</a>
            </div>
        </div>

</div>
