          <div class="modal-dialog modal-dialog-centered" >
                <div class="modal-content">
                    <div class="modal-header">
                            <h5 class="modal-title">Register</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                        </div>
                    <div class="modal-body">
                        <div id="alert_placeholder_Register">

                        </div>
                        <form id="UserRegistrationForm" asp-controller="Authentication" asp-action="Register" >
@*                            <input hidden asp-for="RegistrationInvalid" />*@
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row mb-3">
                                <label asp-for="EmailAddress" class="col-md-4 control-label">Email </label>
                                <div class="col-md-8">
                                   <input asp-for="EmailAddress" placeholder="Enter your email address" class="form-control " />
                                   <span asp-validation-for="EmailAddress" class="text-danger"></span>
                               </div>      
                            </div>
                            <div class="form-group row  mb-3">
                                <label asp-for="Password" class="col-md-4">Password </label>
                                <div class="col-md-8">               
                                    <input asp-for="Password" placeholder="Enter your password" class="form-control " />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>                                                             
                            </div>
                            <div class="form-group row mb-3">
                                <label asp-for="ConfirmPassword" class="col-md-4">Confirm Password </label>
                                <div class="col-md-8">                                   
                                    <input asp-for="@Model.ConfirmPassword" placeholder="Confirm  password" class="form-control " />
                                </div>                                                  
                            </div>
                            <div class="checkbox row mt-2 ">
                                <label asp-for="AcceptTerms" class="form-label col-md-4 offset-md-4">
                                    <input class="form-check-input" asp-for="AcceptTerms" />
                                    @Html.DisplayNameFor(m => m.AcceptTerms)
                                </label>
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnclose"  data-bs-dismiss="modal"  class="btn btn-primary" >close</button>
                        <button type="button"  class="btn btn-primary"name="btnRegister" id="btnRegister">Register</button>
                    </div>
                </div>
            </div>

 
            