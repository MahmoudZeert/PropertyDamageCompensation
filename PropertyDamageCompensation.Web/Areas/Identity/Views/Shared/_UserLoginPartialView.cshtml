  @model PropertyDamageCompensation.Web.Areas.Identity.Models.UserLoginViewModel

          <div class="modal-dialog modal-dialog-centered" >
                <div class="modal-content">
                    <div class="modal-header">
                            <h5 class="modal-title">Login</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                        </div>
                    <div class="modal-body">
                        <div id="alert_placeholder_Login">

                        </div>
                        <form id="UserLoginForm" asp-controller="Authentication" asp-action="Login" >
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row mb-3">
                                <label asp-for="Email" class="col-md-4">Email </label>
                                <div class="col-md-8">
                                   <input asp-for="Email" placeholder="Enter your email address" class="form-control " />
                                   <span asp-validation-for="Email" class="text-danger"></span>
                               </div>   
                                
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-md-4">Password </label>
                                <div class="col-md-8">
                                     
                                    <input asp-for="Password" placeholder="Enter your password" class="form-control " />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>                              
                                
                            </div>
                            <div>
                                <div class="checkbox row mt-2 ">
                                    <label asp-for="RemeberMe" class="form-label col-md-4 offset-md-4">
                                        <input class="form-check-input" asp-for="RemeberMe" />
                                        @Html.DisplayNameFor(m => m.RemeberMe)
                                    </label>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" id="btnclose"  data-bs-dismiss="modal"  class="btn btn-primary" >close</button>*@
                        <button type="button"  class="btn btn-primary"name="btnLogin" id="btnLogin">Login</button>
                    </div>
                </div>
            </div>

 
            