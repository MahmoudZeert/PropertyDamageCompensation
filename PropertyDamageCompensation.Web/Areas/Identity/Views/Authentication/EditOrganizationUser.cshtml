 @model PropertyDamageCompensation.Web.Areas.Identity.Models.OrganizationUserViewModel

@{
    Layout ="~/Views/Shared/_Layout.cshtml";
  }
              <div class=" MGradient p-3  text-sm-center">
                <h3>Edit Organization User</h3>
            </div>
  <div  class=" border d-flex mt-2 justify-content-center flex-column " style="min-height:70vh">
        <form  class =" p-1" asp-area="Identity" asp-controller="Authentication" asp-action="EditOrganizationUser" >
            <input   hidden id="userId" name="userId" value="@Model.Id " />
@*            <div class="row">                                    
                <div id="alert_placeholder_Login">

                </div>
            </div>*@
            <div class="row justify-content-center">
                <div class=" col-sm-5 offset-sm-2 mt-2  ">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                </div>
            </div> 
            <div class="row  justify-content-center mb-3">
                <div class="col-sm-2    text-sm-end">
                    <label asp-for="FirstName" class="control-label  pt-2">First Name </label>
                </div>
                <div class="col-sm-5">
                    <input autofocus asp-for="FirstName" placeholder="Enter your First Name" class="form-control " />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>                                  
            </div>
             <div class="row  justify-content-center mb-3">
                <div class="col-sm-2    text-sm-end">
                    <label asp-for="LastName" class="control-label  pt-2">Last Name </label>
                </div>
                <div class="col-sm-5">
                    <input autofocus asp-for="LastName" placeholder="Enter your Last Name" class="form-control " />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>                                  
            </div>           
            <div class="row  justify-content-center mt-4">
                <div class=" col-md-12   text-md-center ">
                        <button type="submit"  class="btn btn-primary m-2">Update</button>
                       <a type="button"  class="btn btn-primary m-2" asp-area="Identity" asp-controller="Authentication" asp-action="ListOfOrganizationUsers" >Cancel</a>
                </div>
            </div>
        </form>
  </div> 
@section Scripts {
    @{
         await Html.RenderPartialAsync("_ValidationScriptsPartial");
     }
}