@model IEnumerable<PropertyDamageCompensation.Web.Areas.Identity.Models.OrganizationUserViewModel>

@{
    ViewData["Title"]="User Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row MGradient p-3 mb-4">
    <h3>List Of Organization Users</h3>
</div>

    <div class="row justify-content-end">
        <div class="col-md-2 text-md-center">
            <a class="btn btn-primary" asp-action="RegisterOrganizationUser" asp-area="Identity" asp-controller="Authentication">Register New User</a>
        </div>
    </div>


    <div class=" mt-3">
       <table class="table table-striped border-0">
            <thead class="border">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th style="text-align:center" >Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model )
                {
                     <tr>
                         <td>@user.FirstName</td>
                         <td>@user.LastName</td>
                         <td>@user.EmailAddress</td>
                         <td>@string.Join(" , ",@user.UserRoles)</td>
                         <td align="center" style="font-weight:bolder">
                             <a asp-action="EditOrganizationUser" asp-route-id="@user.Id">Edit</a>
                             @*<a asp-action="Delete" asp-route-id="@user.Id">Delete</a>*@
                             <a asp-action="ManageUserRoles" asp-route-userId="@user.Id">Manage Roles</a>
                         </td>
                     </tr>
                }
           
            </tbody>
    </table>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}