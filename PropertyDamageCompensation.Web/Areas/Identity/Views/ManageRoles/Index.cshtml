@model IEnumerable<PropertyDamageCompensation.Web.Areas.Identity.Models.RoleViewModel>

@{
    ViewData["Title"]="Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row MGradient p-3 mb-4">
    <h3>List Of Roles</h3>
</div>
@*<div class="row">*@
         <form asp-action="AddRole" method="post">
            <div class="input-group">
                <input type="text" name="roleName" id="roleName" class="form-control" required/>
                @*<span asp-validation-for="roleName" class="text-danger"></span>*@
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary">Add New Role</button>
                </span>
            </div>
        </form>

    <div class=" mt-5">
       <table class="table table-striped border-0">
            <thead class="border">
                <tr>
                    <th>Id</th>
                    <th>Role</th>
                    <th style="text-align:center" >Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model )
                {
                     <tr>
                         <td>@role.Id</td>
                         <td>@role.Name</td>
                         <td align="center" style="font-weight:bolder">
                             <a asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                             <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                         </td>
                     </tr>
                }
           
            </tbody>
    </table>
    </div>

@*</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}