@model PropertyDamageCompensation.Web.Areas.Identity.Models.RoleViewModel
@{
    ViewData["Title"]="Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="MGradient p-3">
    <h3>Edit Role : @Model.Name</h3>
</div>
<div class="row mt-3">
    <form asp-action="Edit" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <input asp-for="Id" hidden/>
        <div class="form-group col-md-6 mb-3">
            <label asp-for"Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <input class="btn btn-primary" type="submit" asp-action="Edit" asp-controller="ManageRoles" value="Save"/>
            <a class="btn btn-primary"  asp-action="Index" asp-controller="ManageRoles">Cancel</a>
        </div>
    </form>
</div>
