@model PropertyDamageCompensation.Web.Areas.Identity.Models.RoleViewModel
@{
    ViewData["Title"]="Delete Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="MGradient p-3">
    <h4>Delete Role : @Model.Name</h4>
    <h4>Are you sure you want to delete this Role ?</h4>
</div>
<div class="row mt-3">
    <dl class="row">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model=>model.Name)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model=>model.Name)
        </dd>
    </dl>
    <form asp-action="Delete" method="post" >
        <input asp-for="Id" hidden/>
        <div class="col-md-3">
            <input class="btn btn-primary" type="submit"   value="Delete"/>
            <a class="btn btn-primary"  asp-action="Index" asp-controller="ManageRoles">Cancel</a>
        </div>
    </form>
</div>
