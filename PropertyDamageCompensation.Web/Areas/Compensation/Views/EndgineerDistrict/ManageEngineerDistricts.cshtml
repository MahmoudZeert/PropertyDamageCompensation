@model List<PropertyDamageCompensation.Web.Areas.Compensation.Models.EngineerDistrictsViewModel>

@{
    ViewData["Title"]="Engineer District Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="EndgineerDistrict" asp-action="ManageEngineerDistricts" method="post">
    <input hidden type="text" id="userId" name="userId" value="@ViewBag.UserId" />
   @*<div class="container vertical-scrollable">*@
       @*<div class="row">*@
            <div class="card" >
                <div class="card-header">
                    <h3>Manage Engineer districts</h3>
                    Add/Remove district for User : @ViewBag.UserName
                </div>
                <div class="card-body" style="overflow-y:auto;max-height:440px">

                    @for (var i = 0; i < @Model.Count(); i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].DistrictId"/>
                            <input type="hidden" asp-for="@Model[i].DistrictName "/>
                            <input class="form-check-input" asp-for="@Model[i].IsSelected"/>
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].DistrictName
                            </label>
                        </div>
                    }

                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-controller="EndgineerDistrict" asp-action="Index">Cancel</a>
                </div>
            </div>


  @*     </div>
   </div>
*@


</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}