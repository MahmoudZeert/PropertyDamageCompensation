@model IEnumerable<PropertyDamageCompensation.Web.Areas.Identity.Models.EngineerWithDistrictsViewModel>

@{
    ViewData["Title"]="Engineer District Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row MGradient p-3 mb-4">
    <h3>List Of Organization Engineers with districts</h3>
</div>



    <div class=" mt-3">
       <table class="table table-striped border-0">
            <thead class="border">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Districts</th>
                    <th style="text-align:center" >Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model )
                {
                     <tr>
                         <td>@user.EngineerName</td>
                         <td>@user.EngineerEmailAddress</td>
                    @if (@user?.EngineerDistricts != null)
                    {
                        <td>@string.Join(" , ",@user?.EngineerDistricts)</td>
                    }
                    else
                    {
                         <td></td>
                    }

                         <td align="center" style="font-weight:bolder">
                             <a asp-action="ManageEngineerDistricts" asp-route-userName="@user.EngineerName" asp-route-userId="@user.EmgineerId">Manage Districts</a>

                         </td>
                     </tr>
                }
           
            </tbody>
    </table>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}