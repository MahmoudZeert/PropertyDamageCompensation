@model PropertyDamageCompensation.Web.Areas.Compensation.Models.PersonalInfoViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}
<div class="MGradient">
    <h3>Edit</h3>
    <h4>Personal Informationl</h4>
    <hr />
</div>

<div class="row">
    @*<div class="col-md-4">*@
        <form class="row " asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId"/>
            <div class="col-md-4 form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" autofocus class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input     type="text" name="DateOfBirth" id="DateOfBirth" value="@Model.DateOfBirth.ToString("dd/MM/yyyy")" class="form-control datepicker" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3">
                <label asp-for="PlaceOfBirthTownId" class="control-label"></label>
                <select asp-for="PlaceOfBirthTownId" class="form-control form-select" asp-items="ViewBag.PlaceOfBirthTownId"></select>
                <span asp-validation-for="PlaceOfBirthTownId" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3">
                <label asp-for="RegisterId" class="control-label"></label>
                <input asp-for="RegisterId" class="form-control" />
                <span asp-validation-for="RegisterId" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group  mt-3 mb-3">
                <label asp-for="LivingTownId" class="control-label"></label>
                <select asp-for="LivingTownId" class="form-control form-select" asp-items="ViewBag.LivingTownId"></select>
                <span asp-validation-for="LivingTownId" class="text-danger"></span>
            </div>
            <div class="row mt-3 justify-content-center ">
                <div class="col-md-6  text-md-center">
                     <input type="submit" value="Save" class="btn btn-primary" />
                     <a class=" btn btn-primary" asp-action="Details" asp-route-id=@Model.Id >Cancel</a>
                </div>  
            </div>
        </form>
    </div>
@*</div>*@

@section Scripts {
    @{/*await Html.RenderPartialAsync("_ValidationScriptsPartial");*/
       await Html.RenderPartialAsync("_DatePartialView"); 

}
}
